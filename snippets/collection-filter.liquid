<link
  rel="stylesheet"
  href="{{ 'collection-filter.css' | asset_url }}"
  media="all"
>
{% for block in section.blocks %}
  {% case block.type %}
    {% when 'filter' %}
      {% render 'collection-filter-items', _filter: collection.filters, _filter_style: filter_style %}
  {% endcase %}
{% endfor %}
