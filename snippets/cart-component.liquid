<link
  rel="stylesheet"
  href="{{ 'cart-item.css' | asset_url }}"
  media="all"
>
<div class="cart-wrapper">
  <div class="progress__bar-wrapper">
    <div class="progress__bar"></div>
    <div class="progress__bar-msg">YOU ARE $177.32 AWAY FROM FREE SHIPPING</div>
  </div>
  {% form 'cart', cart, class: 'jsCartForm', action: routes.cart_url %}
    <div class="cart__form-header">
      <div class="item-product flex-basis-1/3">
        <p class="cart__form-header-label">Product</p>
      </div>
      <div class="item-details flex-1">
        <p class="cart__form-header-info flex-2"></p>
        <p class="cart__form-header-label flex-1">Price</p>
        <p class="cart__form-header-label flex-1">Quantity</p>
        <p class="cart__form-header-label flex-1">Subtotal</p>
        <p class="cart__form-header-label flex-1">Delete</p>
      </div>
    </div>
    <ul class="cart__form-items gird-column">
      {% for item in cart.items %}
        {% render 'cart-item', item: item %}
      {% endfor %}
    </ul>
    {% comment %}
      <div class="js-btn-payment">
        <input type="submit" name="checkout" value="Checkout">
      </div>
    {% endcomment %}
  {% endform %}
</div>
