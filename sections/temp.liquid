<style>
  .banner__left-content {
     --text-color: {{ section.settings.banner__left-content-color | escape_css }};
   }
</style>

<div class="banner">
  <div class="banner__left">
    {% assign banner_img1 = section.settings.banner_img1 | img_url: '' %}
    {% if banner_img1 %}
      <img
        src="{{banner_img1}}"
        alt="Banner 1"
        class="banner_img"
      >
    {% else %}
      <img
        src="https://cdn.shopify.com/s/files/1/0742/4648/8339/files/1.svg?v=1680688949"
        alt="Banner 1"
        class="banner_img"
      >
    {% endif %}
    <div class="banner__left-content banner__left-content-{{section.settings.select_position_content_left}}">
      <h1 class="banner__left-content-title">
        {{ section.settings['banner__left-content-title1'] }}
      </h1>
      <a href="#" class="banner__left-content-sub-title">{{ section.settings['banner__left-content-sub-title1'] }}</a>
    </div>
  </div>
  <div class="banner__right">
    <img
      class="banner_img"
      src="https://cdn.shopify.com/s/files/1/0742/4648/8339/files/pexels-marco-trinidad-2881785_1.svg?v=1680679690"
      alt="sneakes2"
    >
    <div class="banner__right-content">
      <h1 class="banner__right-content-title">Be ready for Summer 2021</h1>
      <a href="#" class="banner__right-content-sub-title">Upcoming trends</a>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Banner",
  "tag": "section",
  "class": "baner",
  "settings": [
    {
      "type": "header",
      "content": "Banner 1"
    },
    {
      "type": "image_picker",
      "label": "Img Banner",
      "id": "banner_img1"
    },
    {
      "type": "text",
      "label": "Title",
      "id": "banner__left-content-title1",
      "default": "Looking for new shoes?"
    },
    {
      "type": "text",
      "label": "Sub title",
      "id": "banner__left-content-sub-title1",
      "default": "Sneakers on sale"
    },
    {
      "type": "color",
      "label": "Text Color",
      "id": "banner__left-content-color",
      "default": "#fff"
    },
    {
      "type": "select",
      "id": "select_position_content_left",
      "label": "Position Content",
      "options": [
        {
          "value": "top-left",
          "label": "Top-Left"
        },
        {
          "value": "bottom-left",
          "label": "Bottom-Left"
        },
        {
          "value": "top-right",
          "label": "Top-Right"
        },
        {
          "value": "bottom-right",
          "label": "Buttom-Right"
        }
      ],
      "default": "top-left"
    }
  ]
}
{% endschema %}

<div class="slider-content">
  <div class="slider-content__group">
    <h1 class="slider-content__title">
      {{ section.settings['title-text'] }}
    </h1>
    <h6 class="slider-content__sub-title">
      {{ section.settings['sub-text'] }}
    </h6>
  </div>
  <div class="slider-content__group-button">
