<style>
  .slider-content__group {
    --text-color: {{ section.blocks.settings.text-color | escape }}
  }
  .slider-content__title {
    --font-size-title-desktop: {{ font-title-desktop | append: 'px' }}
    ;
    --font-size-title-mobile: {{ font-title-mobile  | append: 'px' }}
  }
  .slider-content__sub-title {
    --font-size-sub-title-desktop: {{ font-sub-title-desktop | append: 'px' }}
    ;
    --font-size-sub-title-mobile: {{ font-sub-title-mobile  | append: 'px' }}
  }
  .slider-content__button {
    {% case section.blocks.settings.btn-style %}
      {% when 'primary' %}
      --btn-text-color: black;
      --btn-bg-color: #ccc;
      --btn-border-color: none;
      {% when 'secondary' %}
      --btn-text-color: #9b59b6;
      --btn-bg-color: none;
      --btn-border-color: #fff;
      {% when 'tertiary' %}
      --btn-text-color: #2ecc71;
      --btn-bg-color: none;
      --btn-border-color: #fff;
      {% when 'quaternary' %}
      --btn-text-color: #1abc9c;
      --btn-bg-color: none;
      --btn-border-color: #fff;
    {% else %}
      --btn-text-color: #f1c40f;
      --btn-bg-color: none;
      --btn-border-color: #f1c40f;
    {% endcase %}
  }
</style>
