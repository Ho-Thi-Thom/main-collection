      .slider {
  position: relative;
  width: 100%;
  height: 800px;
}
.slider-img,
.slider-img div,
.slider-image {
  width: 100%;
  height: 100%;
}

.slider-image {
  object-fit: cover;
  border-radius: 4px;
}

.slider-content {
  position: absolute;
  left: 40px;
  bottom: 96px;
  display: flex;
  flex-direction: column;
  gap: 40px;
}

.slider-content__group {
  gap: 10px;
  color: var(--text-color);
}

.slider-content__title {
  font-weight: 500;
  font-size: var(--font-size-title-desktop);
  line-height: 88px;
  width: 404px;
  height: 176px;
}

.slider-content__sub-title {
  font-size: var(--font-size-sub-title-desktop);
  font-weight: 400;
  line-height: 28.8px;
}

.slider-content__group-button {
  display: flex;
  gap: 10px;
  justify-content: space-between;
}

.slider-content__button {
  height: 36px;
  border-radius: 4px;
  padding: 0px 60px;
  font-weight: 500;
  font-size: 14px;

  color: var(--btn-text-color);
  background: var(--btn-bg-color);
  border: 1px solid var(--btn-border-color);
}

.slider-content__button a {
  white-space: nowrap;
  line-height: 36px;
}

.slider__button-arrow {
  position: absolute;
  right: 0px;
  top: 50%;
}

.slider__button-arrow button {
  width: 40px;
  height: 40px;
  border-radius: 4px;
  background-color: white;
}

/*  mobile */
@media (max-width: 768px) {
  .slider {
    height: 260px;
  }

  .slider-content {
    left: 16px;
    right: 16px;
    bottom: 20px;
    gap: 20px;
  }

  .slider-content__group {
    gap: 10px;
  }

  .slider-content__title {
    font-size: var(--font-size-title-mobile);
    line-height: 33px;
    width: 152px;
    height: 66px;
  }

  .slider-content__sub-title {
    font-size: var(--font-size-sub-title-desktop);
    font-weight: 400;
    line-height: 22.4px;
  }

  .slider-content__group-button {
    justify-content: stretch;
  }
  .slider-content__button {
    padding: 0px 30px;
    flex: 1;
  }

  .slider__button-arrow {
    display: none;
  }
}


