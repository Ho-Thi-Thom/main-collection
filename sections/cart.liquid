<link
  rel="stylesheet"
  href="{{ 'cart.css' | asset_url }}"
  media="all"
>
<link
  rel="stylesheet"
  href="{{ 'cart-component.css' | asset_url }}"
  media="all"
>

<link
  rel="stylesheet"
  href="{{ 'cart-summary.css' | asset_url }}"
  media="all"
>

<div
  class="cart-section-wrapper"
  data-section-id="{{ section.id }}"
>
  <div class="section-content">
    {% if cart.item_count > 0 %}
      {% render 'cart-component', isHeader: true %}
    {% else %}
      {% render 'cart-empty' %}
    {% endif %}
  </div>
  <div class="section-footer{% if cart.item_count <= 0 %} section-disable{% endif %}">
    {% render 'shipping-rates' %}
    {% render 'cart-summary', isGoToCart: false %}
  </div>
</div>

{% schema %}
{
  "name": "cart",
  "tag": "section",
  "settings": [
    {
      "type": "number",
      "id": "free_shipping_conditions",
      "label": "Free shipping conditions",
      "default": 200
    },
    {
      "type": "text",
      "label": "Currency",
      "id": "currency",
      "default": "USD"
    }
  ],
  "blocks": []
}
{% endschema %}
{{ 'cart.js' | asset_url | script_tag }}
